<div class="signup">
  <h2>Sign up</h2>

  <%= form_for @user do |f| %>
    <div>
      <%= f.text_field :name, placeholder: "Name" %>
    </div>
    <div>
      <%= f.text_field :email, placeholder: "Email" %>
    </div>
    <div>
      <%= f.text_field :city, placeholder: "City" %>
    </div>
    <div>
      <%= f.password_field :password, placeholder: "Password" %>
    </div>
    <%= f.submit "Sign Up" %>
  <% end %>

</div>